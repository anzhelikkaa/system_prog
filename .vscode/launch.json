{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch with g++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\screen_app.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Users/ADMIN/Documents/систем програм",
      "program": "c:/Users/ADMIN/Documents/систем програм/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
